{
  "extends": "../../packages/typescript-config/base.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["./src/lib/*"],
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"]
    },
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "types": ["minimatch"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
